<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:gms="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:id="@+id/User"
    tools:context=".ProfileFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/orange"
        android:text="Sign out"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:cornerRadius="15dp"
        card_view:strokeColor="@color/orange"
        card_view:strokeWidth="3dp" />

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_2"
        android:backgroundTint="@color/white"
        card_view:cardCornerRadius="40dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <EditText
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="Mohd Zaid Husain"
        android:maxLines="1"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/name"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/full_name"
        android:text="\@zaid"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"

                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Age:"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="30dp"

                    android:inputType="text"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/age"
                    android:background="#00000000"
                    android:hint="Age"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"


                    android:inputType="number"

                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"

                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Year:"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="30dp"

                    android:inputType="text"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="Year"
                    android:id="@+id/year"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"


                    android:inputType="text"

                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"

                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Mess:"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="30dp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="Crcl/Ffcl"
                    android:id="@+id/mess"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"

                    android:inputType="textCapCharacters"

                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"

                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Mess Type:"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="30dp"

                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="Special"
                    android:textSize="20dp"
                    android:id="@+id/type"
                    android:paddingLeft="5dp"


                    android:inputType="textCapCharacters"

                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"

                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Hostel Block:"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="30dp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="A/B/C"
                    android:id="@+id/block"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"


                    android:inputType="textCapCharacters"

                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                >

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="Enter State"
                    android:id="@+id/state"
                    android:textSize="20dp"
                    android:paddingLeft="5dp"


                    android:inputType="textCapCharacters"

                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"/>            </LinearLayout>









            <com.google.android.material.button.MaterialButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:backgroundTint="@color/orange"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="20dp"
        card_view:strokeColor="@color/orange"
        card_view:strokeWidth="3dp"
        app:cornerRadius="15dp"
        />
        </LinearLayout>
    </androidx.cardview.widget.CardView>





    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="20dp"
    >
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pic1"/>
</androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pic2"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pic3"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card_view:cardCornerRadius="20dp"
                >
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pic4"/>
            </androidx.cardview.widget.CardView>






        </LinearLayout>


    </HorizontalScrollView>





        </LinearLayout>

