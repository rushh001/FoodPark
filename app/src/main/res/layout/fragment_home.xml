<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:gms="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Home"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".HomeFragment">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="30dp"
    android:backgroundTint="#3F51B5"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="20dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOHD ZAID HUSAIN"
        android:textSize="32dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#FF9800"
        android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins Left"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:layout_marginStart="30dp"
            android:inputType="text"

            android:textColor="#FF9800"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6000"
                android:textSize="35dp"
                android:layout_marginStart="30dp"
                android:padding="5dp"
                android:inputType="text"
                android:textColor="#FF9800"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="month"
                android:textSize="15dp"
                android:textColor="#FF9800"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textSize="35dp"
                android:layout_marginStart="60dp"
                android:padding="5dp"
                android:inputType="text"
                android:textColor="#FF9800"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day"
                android:textSize="15dp"
                android:textColor="#FF9800"
                android:fontFamily="sans-serif-medium"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRCL FOOD PARK"
            android:textSize="22dp"
            android:padding="10dp"
            android:inputType="text"
            android:textColor="#FF9800"
            android:layout_marginStart="27dp"
            android:fontFamily="sans-serif"/>

    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        card_view:tabIndicatorColor="#FF9800"
        card_view:tabTextColor="@color/black"
        card_view:tabSelectedTextColor="#FF9800"
     android:backgroundTint="@color/white"


     >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basket"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favourite"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"/>
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
    </LinearLayout>



















